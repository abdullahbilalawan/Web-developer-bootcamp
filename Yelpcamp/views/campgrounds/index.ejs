

<% layout('layouts/boilerplate') %> 
    <header>
        <a href="/campground/new">Add new</a>
    </header>
    


    <h1>All Campgrounds</h1>

    <ul>

    <% for (let campground of campgrounds) {%>

        <div class="card mb-3">
            <div class="row">

                <div class="col-md-4">
                    <img class="card-img-top" src="https://source.unsplash.com/random" style="width: 100%; height: 15vw; object-fit: cover;" >

                </div>

                <div class="col-md-8">
                    <div class="card-body">
                            <h4 class="card-title"><%= campground.title  %> </h4>
                            <h4 class="car-text"><%=campground.location%></h4>
                            

                            <a href="/campground/<%=campground.id%> " class="btn btn-primary">View<%= campground.title  %> </a>

                    </div>
                    

                </div>

               
            </div>


        </div>

    
         

        
        
    <% } %> 
    
    </ul>
